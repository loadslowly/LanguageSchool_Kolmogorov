<UserControl x:Class="WpfApp1.UC.ControlService"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.UC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Image Source="{Binding MainImagePath}" Height="125" Width="125"></Image>
            <StackPanel Margin="20,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="Title" Text="{Binding Title}"></TextBlock>
                <TextBlock x:Name="Cost" Text="{Binding Cost}"></TextBlock>
                <TextBlock x:Name="Description" Text="{Binding Description}"></TextBlock>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="BtnEdit" Margin="0,0,20,0" Click="BtnEdit_Click">Редактировать</Button>
                    <Button x:Name="BtnDelete" Click="BtnDelete_Click">Удалить</Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
